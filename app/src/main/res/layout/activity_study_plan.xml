                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/Bio_S"
                android:textAlignment="center"
                android:textColor="@color/logoGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/civilTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/Civil_S"
                android:textAlignment="center"
                android:textColor="@color/logoGrey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/CE_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/computer_engineering" />

            <ImageButton
                android:id="@+id/CS_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/computer_science" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CETV"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/CE_S"
                android:textAlignment="center"
                android:textColor="@color/logoGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/CSTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/CS_S"
                android:textAlignment="center"
                android:textColor="@color/logoGrey"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Visual_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/design_communication" />

            <ImageButton
                android:id="@+id/Elect_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/electrical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
