<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showUserEmailWelcomeTV"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:gravity="center|end"
            android:text="@string/todo"
            android:textColor="@color/logoGrey"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/signOutWelcomeBu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundColor"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/exit" />

    </LinearLayout>

    <Switch
        android:id="@+id/switchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/switch_to_admin_view"
        android:textAlignment="textEnd"
        android:textColor="@color/logoGrey"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/logo_no_border" />

    <ImageButton
        android:id="@+id/feedBu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/backgroundColor"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/feed" />

    <TextView
        android:id="@+id/feedTextView"
        android:layout_width="152dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="@string/feedText"
        android:textAlignment="center"
        android:textColor="@color/logoGrey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/space20"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/directoryBu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundColor"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/directory2" />

        <TextView
            android:id="@+id/space15"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/affairsBu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundColor"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/student__2_" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/directoryTextView"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/directoryText"
            android:textAlignment="center"
            android:textColor="@color/logoGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/space16"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/affairsTextView"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginBottom="121dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/affairsText"
            android:textAlignment="center"
            android:textColor="@color/logoGrey"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>