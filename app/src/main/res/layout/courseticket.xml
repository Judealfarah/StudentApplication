<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center|top"
    android:background="@drawable/tableborder"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="@string/todo"
        android:textColor="@color/logoGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/courseNameTV"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="@string/course_name"
        android:textColor="@color/logoGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/courseSectionTV"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="@string/section"
        android:textColor="@color/logoGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/courseRoomTV"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="@string/course_room"
        android:textColor="@color/logoGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/DayTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/deleteBu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/delete_ticket" />

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>