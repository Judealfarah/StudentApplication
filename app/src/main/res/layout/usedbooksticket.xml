<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usedBookNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/usedBookName"
            android:textColor="@color/logoGrey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usedBookDescTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/open_sans"
            android:gravity="start"
            android:text="@string/usedBookDesc"
            android:textAlignment="textStart"
            android:textColor="@color/logoGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usedBookPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/open_sans"
            android:gravity="start"
            android:text="@string/usedBookPrice"
            android:textAlignment="textStart"
            android:textColor="@color/logoGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usedBookCPEmailTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/open_sans"
            android:gravity="start"
            android:text="@string/studentEmail"
            android:textAlignment="textStart"
            android:textColor="@color/logoGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usedBookCPNumTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/open_sans"
            android:gravity="start"
            android:text="@string/studentNum"
            android:textAlignment="textStart"
            android:textColor="@color/logoGrey"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/deleteBookBu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/backgroundColor"
            android:contentDescription="@string/todo"
            android:foregroundGravity="right"
            android:visibility="gone"
            app:srcCompat="@drawable/delete_ticket" />

    </LinearLayout>
</LinearLayout>