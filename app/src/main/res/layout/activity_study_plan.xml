<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".StudyPlan"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showUserEmailPlanTV"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:gravity="center|end"
                android:text="@string/todo"
                android:textColor="@color/logoGrey"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/signOutPlanBu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/exit" />

        </LinearLayout>

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:src="@drawable/logo_no_border"
            />

        <TextView

            android:id="@+id/studyPlanTV"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/studyPlan"
            android:textAlignment="center"
            android:textColor="@color/logoGrey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Acc_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/accounting" />

            <ImageButton
                android:id="@+id/Archi_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/architecture" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/Acc_S"
                android:textAlignment="center"
                android:textColor="@color/logoGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/archiTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/architecture_engineering"
                android:textAlignment="center"
                android:textColor="@color/logoGrey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Bio_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/biomedical" />

            <ImageButton
                android:id="@+id/Civil_Bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/civil" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
